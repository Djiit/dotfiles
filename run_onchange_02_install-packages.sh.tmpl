#!/bin/bash

{{ range .packages.common.binaries -}}
{{ . }}
{{ end -}}

{{ range index .packages .chezmoi.os "binaries" -}}
{{ . }}
{{ end -}}

{{ if eq .chezmoi.os "linux" -}}
sudo mkdir -p -m 755 /etc/apt/keyrings

{{ range .packages.linux.aptSources -}}
{{ . }}
{{ end -}}

sudo apt update

sudo apt install {{ .packages.linux.apt | join " " }}} -y
{{ end -}}

{{ if eq .chezmoi.os "darwin" -}}
HOMEBREW_NO_AUTO_UPDATE=1 brew bundle \
    --no-upgrade \
    --no-lock \
    --quiet \
    --file=/dev/stdin <<EOF
{{ range .packages.darwin.taps -}}
tap {{ . | quote }}
{{ end -}}

{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}

{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF

# post-install for docker-compose
mkdir -p ~/.docker/cli-plugins
ln -sfn $(brew --prefix)/opt/docker-compose/bin/docker-compose ~/.docker/cli-plugins/docker-compose
{{ end -}}
